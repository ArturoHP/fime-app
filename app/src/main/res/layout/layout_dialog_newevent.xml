<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="275dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <LinearLayout
               android:gravity="center"
               android:weightSum="10"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:gravity="center_horizontal"
                   android:textSize="20dp"
                   android:textColor="@color/fimecolor"
                   android:textStyle="bold"
                   android:text="Nuevo Evento"
                   android:layout_margin="10dp"
                   android:layout_weight="8"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"/>

               <ImageButton
                   android:id="@+id/closeevent"
                   android:layout_margin="10dp"
                   android:src="@drawable/ic_closegreen"
                   android:layout_width="0dp"
                   android:layout_weight="2"
                   android:layout_height="wrap_content"/>

           </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="Importancia:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>



                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:id="@+id/impnula"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Normal" />

                    <CheckBox
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:id="@+id/impmax"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Urgente" />



                </LinearLayout>


            </LinearLayout>

            <androidx.cardview.widget.CardView
        app:cardCornerRadius="15dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/tvtituloevento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Titulo:" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="15dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/tvdescevento"
            android:hint="Descripcion:"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:backgroundTint="@color/fimecolor"
        app:cardCornerRadius="15dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/submitevent"
            android:textColor="@color/White"
            android:background="@color/zxing_transparent"
            android:text="Submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>