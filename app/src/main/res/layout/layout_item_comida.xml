<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="5"
    app:cardCornerRadius="15dp"
    android:id="@+id/card4addcarrito"
    android:layout_margin="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="11">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <LinearLayout
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imagencomida"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                android:layout_weight="7"
                app:cardCornerRadius="15dp"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="center"
                        android:id="@+id/nombrecomida"
                        android:textStyle="bold"
                        android:textColor="@color/fimecolor"
                        android:text="Null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/descripcioncomida"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">


                            <TextView
                                android:id="@+id/costocomida"
                                android:textSize="20dp"
                                android:gravity="center"
                                android:textColor="@color/fimecolor"
                                android:textStyle="bold"
                                android:text="Null"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>



                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:textStyle="bold"
                                android:gravity="center"
                                android:text="CANTIDAD:"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/cantidadtvx"
                                android:gravity="center"
                                android:text="0"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>


                            <LinearLayout
                                android:orientation="horizontal"
                                android:weightSum="2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <Button
                                    android:id="@+id/sumacantidad"
                                    android:layout_weight="1"
                                    android:layout_gravity="start"
                                    android:textColor="@color/fimecolor"
                                    android:text="+"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"/>

                                <Button
                                    android:id="@+id/restacantidad"
                                    android:layout_weight="1"
                                    android:layout_gravity="end"
                                    android:textColor="@color/Red"
                                    android:text="-"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>




            </androidx.cardview.widget.CardView>




        </LinearLayout>

        <Button
            android:id="@+id/agregarcomidacarrito"
            android:textColor="@color/White"
            android:gravity="center"
            android:text="Agregar al Carrito"
            android:background="@color/White"
            android:backgroundTint="@color/fimecolor"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </LinearLayout>


</androidx.cardview.widget.CardView>