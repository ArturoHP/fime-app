<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.Inicio">

    <ScrollView
        android:background="@color/backfimeennumeros"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.synnapps.carouselview.CarouselView
            android:id="@+id/carouselView"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            app:fillColor="#FFFFFFFF"
            app:pageColor="#00000000"
            app:radius="3dp"
            app:slideInterval="4000"
            app:strokeColor="#FF777777"
            app:strokeWidth="1dp"/>

        <TextView
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/fimecolor"
            android:text="FIME EN NUMEROS"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:weightSum="6"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_group"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <TextView
                android:padding="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/White"
                android:text="22700+ Alumnos"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_maestros"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <TextView
                android:padding="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/White"
                android:text="680+ Maestros"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_progaca"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <TextView
                android:padding="10dp"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/White"
                android:text="33+ Programas Academicos"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>






        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_certificados"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <TextView
                android:padding="10dp"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/White"
                android:text="29+ PROGRAMAS ACADÉMICOS CERTIFICADOS"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_location"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

                <TextView
                    android:padding="10dp"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textColor="@color/White"
                    android:text="5+ CAMPUS"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="NUESTROS ALIADOS ESTRATÉGICOS"
                android:textSize="15dp" />

            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouselView4aliados"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="15dp"
                app:fillColor="#FFFFFFFF"
                app:pageColor="#00000000"
                app:radius="3dp"
                app:slideInterval="4000"
                app:strokeColor="#FF777777"
                app:strokeWidth="1dp" />
        </LinearLayout>
    </LinearLayout>


    </ScrollView>



</LinearLayout>