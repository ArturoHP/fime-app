<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/White"
    android:weightSum="11">


    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_weight="7"
        android:textColor="@color/fimecolor"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Carrito: "
        android:padding="15dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>


            <ImageButton
                android:layout_weight="3"
                android:scaleType="fitCenter"
                android:backgroundTint="@color/White"
                android:id="@+id/closecarrito"
                android:src="@drawable/ic_closegreen"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>



    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="10dp"
        android:layout_weight="5"
        android:id="@+id/carrito"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    
        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/qrcodepagar"
            android:scaleType="centerCrop"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>


        <Button
            android:id="@+id/comprarcarrito"
            android:backgroundTint="@color/fimecolor"
            android:text="Comprar"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>



</LinearLayout>